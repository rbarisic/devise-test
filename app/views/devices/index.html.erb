<div class="content-wrapper">
  <div class="content">
    <h1 class="text-center">Device Database</h1>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <div class="l-box">
          <h2>Devices in Database</h2>
          <% if @devices.any? %>
            <%= render 'device_table' %>
          <% else %>
            <h3>It seems like you didn't add any Devices yet.</h3>
            <p><%= link_to 'Click here to index a new Device.', new_device_path %></p>
          <% end %>
        </div>
      </div>

      <div class="pure-u-1 pure-u-md-1-2">
        <div class="l-box">
          <h2>Actions</h2>
          <ul class="pure-list pure-list-actions">
            <li>
              <i class="fa fa-file-o"></i>
              <%= link_to 'Index a new Device', new_device_path %>
            </li>
            <li>
              <i class="fa fa-pencil-square-o"></i>
              <a href="#">Inspect an existing Device</a>
            </li>
            <li>
              <i class="fa fa-trash-o"></i>
              <a href="#">Remove a Device from the Database</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>